<h2>Sub babes</h2>

<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author%>
  <%= f.text_field :author %>
  <%= f.label :content_body%>
  <%= f.text_field :content_body %>
  <%= f.label :rating %>
  <%= f.select :rating, ['1', '2', '3', '4', '5'] %>
  <br>

  <%= f.submit :class => "btn btn-default"%>
<% end %>
